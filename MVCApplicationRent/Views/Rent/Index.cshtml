@model IEnumerable<DTO.Rent>

@{
    ViewBag.Title = "All Rents";
}

<h2>All Rents</h2>

<p>
    @Html.ActionLink("Create New", "AddRent")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Client.Firstname) @Html.DisplayNameFor(model => model.Client.Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Material.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BeginDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Client.Firstname) @Html.DisplayFor(modelItem => item.Client.Lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Material.Name)
        </td>
        <td>
            @item.BeginDate.Date.ToString("yyyy/MM/dd")
        </td>
        <td>
            @item.EndDate.Date.ToString("yyyy/MM/dd")
        </td>
        <td>
            @Html.ActionLink("Edit", "EditRent", new { id=item.Id }) |
            @Html.ActionLink("Details", "DetailsRent", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteRent", new { id=item.Id })
        </td>
    </tr>
}

</table>
